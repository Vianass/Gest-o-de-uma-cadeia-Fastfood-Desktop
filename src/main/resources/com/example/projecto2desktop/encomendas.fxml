            prefWidth="1280" prefHeight="720"
            style="-fx-background-color: #1f3b4d;">

    <top>
        <HBox style="-fx-background-color: #2c3e50;" alignment="CENTER_LEFT" prefHeight="60">
            <padding><Insets left="20"/></padding>
