<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projecto2desktop.controllers.LogInController"
            style="-fx-background-color: #1b323c;">

    <center>
        <HBox alignment="CENTER" spacing="100" style="-fx-padding: 50;">

            <!-- Área de Login -->
            <VBox alignment="CENTER" spacing="15">
                <Label text="Bem-vindo" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />

                <TextField fx:id="campoEmail"
                           promptText="Email"
                           style="-fx-background-color: #2c4a5a; -fx-text-fill: white; -fx-prompt-text-fill: #cccccc;"
                           prefWidth="200" />

                <PasswordField fx:id="campoPassword"
                               promptText="Senha"
                               style="-fx-background-color: #2c4a5a; -fx-text-fill: white; -fx-prompt-text-fill: #cccccc;"
                               prefWidth="200" />

                <Button text="Entrar"
                        onAction="#handleLogin"
                        style="-fx-background-color: #ff6b00; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="200" />
            </VBox>

            <!-- Logotipo -->
            <ImageView fitHeight="250" fitWidth="250" preserveRatio="true">
                <Image url="@/Images/image-removebg-preview.png" />
            </ImageView>

        </HBox>
    </center>

</BorderPane>
