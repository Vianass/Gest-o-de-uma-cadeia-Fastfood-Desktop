<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projecto2desktop.controllers.FornecedoresController"
            style="-fx-background-color: #1b323c;"
            prefHeight="800"
            prefWidth="1200">

    <stylesheets>
        <URL value="@/Styles/application.css" />
    </stylesheets>

    <!-- Topo - Barra de Título -->
    <top>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color: #2c4a5a;"
              prefHeight="60">
            <padding>
                <Insets left="20"/>
            </padding>
            <ImageView fitHeight="40"
                       fitWidth="40"
                       pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@/Images/image-removebg-preview.png" />
            </ImageView>
            <Label text="Gestão de Fornecedores"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Centro - Conteúdo Principal -->
    <center>
        <VBox spacing="20"
              alignment="TOP_CENTER"
              style="-fx-padding: 20;">

            <!-- Tabela de Fornecedores -->
            <TableView fx:id="tableViewFornecedores"
                       styleClass="tabela-fornecedores"
                       prefHeight="400">

            <columns>
                <TableColumn fx:id="colunaNome" text="Nome" prefWidth="200" style="-fx-alignment: CENTER-LEFT;" />
                <TableColumn fx:id="colunaContacto" text="Contacto" prefWidth="150" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="colunaAvaliacao" text="Avaliação" prefWidth="100" style="-fx-alignment: CENTER;" />

            </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <!-- Formulário de Edição/Adição -->
            <GridPane hgap="10" vgap="10"
                      style="-fx-background-color: #2c4a5a; -fx-padding: 20;"
                      alignment="CENTER">
                <Label text="Nome:"
                       style="-fx-text-fill: white;"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="campoNome"
                           promptText="Nome do Fornecedor"
                           style="-fx-background-color: #3a5a6a; -fx-text-fill: white;"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Contacto:"
                       style="-fx-text-fill: white;"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="campoContacto"
                           promptText="Número de Contacto"
                           style="-fx-background-color: #3a5a6a; -fx-text-fill: white;"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Avaliação:"
                       style="-fx-text-fill: white;"
                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <HBox spacing="10" alignment="CENTER_LEFT"
                      GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <Slider fx:id="sliderAvaliacao"
                            min="0" max="5"
                            blockIncrement="0.5"
                            majorTickUnit="1"
                            showTickMarks="true"
                            showTickLabels="true"
                            prefWidth="150"/>
                    <Label fx:id="labelAvaliacao"
                           text="0.0"
                           style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </GridPane>

            <!-- Botões de Ação -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="➕ Adicionar"
                        onAction="#adicionarFornecedor"
                        style="-fx-background-color: #ff6b00; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="120" prefHeight="40"/>

                <Button text="✏️ Editar"
                        onAction="#atualizarFornecedor"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="120" prefHeight="40"/>

                <Button text="🗑️ Remover"
                        onAction="#removerFornecedor"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="120" prefHeight="40"/>

                <Button text="🔙 Menu"
                        onAction="#voltarAoMenu"
                        prefWidth="120" prefHeight="40"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>

            </HBox>
        </VBox>
    </center>

    <!-- Rodapé - Mensagens de Status -->
    <bottom>
        <Label fx:id="labelMensagem"
               style="-fx-text-fill: #29cf26; -fx-font-size: 14px; -fx-padding: 10;"
               alignment="CENTER"/>
    </bottom>
</BorderPane>